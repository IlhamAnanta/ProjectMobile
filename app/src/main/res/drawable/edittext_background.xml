<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State untuk latar belakang normal -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="24dp"/> <!-- Radius sudut melengkung -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC"/>
        </shape>
    </item>

    <!-- State untuk latar belakang saat fokus -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="16dp"/> <!-- Radius sudut melengkung -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC"/>
        </shape>
    </item>

    <!-- State untuk latar belakang saat tidak aktif -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="4dp"/> <!-- Radius sudut asli -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC"/>
        </shape>
    </item>
</selector>
