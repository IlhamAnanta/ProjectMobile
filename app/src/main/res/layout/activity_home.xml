<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/iconMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/icon_menu" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/iconMenu"
        android:src="@drawable/logo" />

    <!-- Search -->
    <ImageView
        android:id="@+id/iconSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="76dp"
        android:src="@drawable/icon_search" />

    <!-- Notification -->
    <ImageView
        android:id="@+id/iconNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="-206dp"
        android:layout_toStartOf="@id/iconSearch"
        android:src="@drawable/icon_notification" />

    <!-- Setting -->
    <ImageView
        android:id="@+id/iconSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="-53dp"
        android:layout_toStartOf="@id/iconNotification"
        android:src="@drawable/icon_setting" />

    <!-- Iklan -->
    <ImageView
        android:id="@+id/bannerAd"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/iconMenu"
        android:layout_marginTop="16dp"
        android:src="@drawable/banner_ad"
        android:scaleType="centerCrop" />

    <!-- Paket Premium -->
    <RelativeLayout
        android:id="@+id/premiumPackage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bannerAd"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_premium_package"/>

    <RelativeLayout
        android:id="@+id/improveSkill1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bannerAd"
        android:layout_marginTop="177dp"
        android:background="@drawable/improve_skill1" />

    <RelativeLayout
        android:id="@+id/improveSkill2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bannerAd"
        android:layout_marginTop="300dp"
        android:background="@drawable/improve_skill2" />

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bannerAd"
        android:layout_marginTop="420dp"
        android:background="@drawable/navbar">

    </RelativeLayout>
</RelativeLayout>
